\begin_deeper
\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\mathbf{y} & = & g(\bm{\theta},\mathbf{X})+\boldsymbol{\eta}+\bm{\bm{\varepsilon}}\\
\bm{\eta} & \sim & \text{multivariate normal}(\mathbf{0},\boldsymbol{\Sigma})\\
\bm{\Sigma} & = & \overbrace{{\underbrace{\sigma^{2}(\mathbf{I}-\rho\mathbf{W})}_{\text{precision matrix}}}^{-1}\mathbf{I}}^{\text{covariance matrix}}\\
\bm{\epsilon} & \sim & \text{\text{multivariate normal}}(\mathbf{0},\sigma_{\varepsilon}^{2}\mathbf{I})
\end{eqnarray*}

\end_inset


\end_layout

